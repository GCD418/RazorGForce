@page
@model FuerzaGServicial.Pages.UserAccounts.ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<!-- Page Header -->
<div class="page-header py-4 bg-light mb-4">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3 class="text-dark">
                    <i class="bi bi-shield-lock me-2"></i>Cambiar Contraseña
                </h3>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <i class="bi bi-key text-primary" style="font-size: 3rem;"></i>
                        <h4 class="mt-3 mb-2">Actualizar Contraseña</h4>
                        <p class="text-muted">Cambia tu contraseña de forma segura</p>
                    </div>

                    <!-- Mensaje de éxito -->
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <strong>@Model.SuccessMessage</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Mensaje de error -->
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>@Model.ErrorMessage</strong>
                            @if (Model.ValidationErrors.Any())
                            {
                                <ul class="mb-0 mt-2">
                                    @foreach (var error in Model.ValidationErrors)
                                    {
                                        <li>@error</li>
                                    }
                                </ul>
                            }
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Formulario usando partial view -->
                    <partial name="_ChangePasswordForm" model="@(new FuerzaGServicial.Models.Auth.ChangePasswordFormModel { IsForced = false })" />

                    <!-- Info adicional -->
                    <div class="alert alert-info mt-4" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        <small>
                            <strong>Recomendaciones de seguridad:</strong>
                            <ul class="mb-0 mt-1">
                                <li>Usa al menos 8 caracteres</li>
                                <li>Combina mayúsculas, minúsculas y números</li>
                                <li>No uses información personal obvia</li>
                            </ul>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
