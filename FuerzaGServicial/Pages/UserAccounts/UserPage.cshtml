@page
@model UserPageModel

@{
    ViewData["Title"] = "Usuarios";
}
<section id="useraccounts" class="section bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="fw-bold">Listado de Usuarios</h2>
            <p class="text-muted">Gestiona los registros de las cuentas de usuario del sistema</p>
        </div>

        <div class="d-flex justify-content-end mb-4">
            <a asp-page="/UserAccounts/CreateModel" class="btn btn-custom">
                <i class="fas fa-plus-circle me-2"></i> Nuevo Usuario
            </a>
        </div>

        <div class="table-responsive shadow-sm rounded-3">
            <table class="table align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th style="width:5%;">#</th>
                        <th style="width:30%;">Nombre Completo</th>
                        <th style="width:15%;">Teléfono</th>
                        <th style="width:15%;">Correo</th>
                        <th style="width:20%;">Rol</th>
                        <th style="width:15%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.UserAccounts
                                        .OrderBy(x => x.FirstLastName + " " + (x.SecondLastName ?? "") + " " + x.Name)
                                        .Select((user, index) => new { User = user, Index = index + 1 }))
                    {
                        <tr>
                            <td class="text-center"><strong>@t.Index</strong></td>
                            <td>@t.User.FirstLastName @t.User.SecondLastName @t.User.Name</td>
                            <td class="text-center">@t.User.PhoneNumber</td>
                            <td>@t.User.Email</td>
                            <td class="text-center">@((t.User.Role == "CEO") ? "Propietario" : "Gerente")</td>
                            <td class="text-nowrap text-center">
                                <a asp-page="/UserAccounts/EditModel" asp-route-id="@Model.ProtectId(t.User.Id)" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <button type="button" class="btn btn-sm btn-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal@(t.User.Id)">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <td colspan="6" class="text-end">
                            <strong>@Model.UserAccounts.Count()</strong> registro(s) encontrado(s)
                        </td>
                    </tr>
                </tfoot>
            </table>

            @foreach (var t in Model.UserAccounts)
            {
                <div class="modal fade" id="deleteModal@(t.Id)" tabindex="-1" aria-labelledby="deleteModalLabel@(t.Id)" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content border-0 shadow">
                            <div class="modal-header modal-header-blue border-0">
                                <h5 class="modal-title" id="deleteModalLabel@(t.Id)">
                                    <i class="fas fa-exclamation-triangle me-2"></i> Confirmar eliminación
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body">
                                <p class="mb-3">
                                    ¿Está seguro de que desea eliminar al usuario <strong>@t.Name @t.FirstLastName</strong>?
                                </p>
                                <p class="text-muted small">
                                    <i class="fas fa-info-circle me-2"></i> Esta acción no se puede deshacer.
                                </p>
                            </div>
                            <div class="modal-footer border-0">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    <i class="fas fa-times me-2"></i> Cancelar
                                </button>
                                <form method="post"
                                      asp-page-handler="Delete"
                                      asp-route-id="@Model.ProtectId(t.Id)"
                                      style="display:inline;">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash me-2"></i> Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
