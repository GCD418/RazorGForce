@page
@model FuerzaGServicial.Pages.UserAccounts.ForceChangePasswordModel
@{
    ViewData["Title"] = "Cambio de Contraseña Obligatorio";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FuerzaG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-5">
                        <!-- Header con ícono de alerta -->
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <i class="bi bi-shield-exclamation text-warning" style="font-size: 4rem;"></i>
                            </div>
                            <h2 class="fw-bold mb-2">Cambio de Contraseña Requerido</h2>
                            <p class="text-muted">
                                Este es tu primer inicio de sesión. Por seguridad, debes cambiar tu contraseña antes de continuar.
                            </p>
                        </div>

                        <!-- Mensajes de error -->
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <strong>@Model.ErrorMessage</strong>
                                @if (Model.ValidationErrors.Any())
                                {
                                    <ul class="mb-0 mt-2">
                                        @foreach (var error in Model.ValidationErrors)
                                        {
                                            <li>@error</li>
                                        }
                                    </ul>
                                }
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <!-- Formulario usando partial view -->
                        <partial name="_ChangePasswordForm" model="@(new FuerzaGServicial.Models.Auth.ChangePasswordFormModel { IsForced = true })" />

                        <!-- Info adicional -->
                        <div class="alert alert-info mt-4" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            <small>
                                Después de cambiar tu contraseña, deberás iniciar sesión nuevamente con tus nuevas credenciales.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
