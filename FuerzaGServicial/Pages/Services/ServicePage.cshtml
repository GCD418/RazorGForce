@page
@model FuerzaGServicial.Pages.Services.ServicePage

@{
    ViewData["Title"] = "Servicios";
}

<section id="services" class="section bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="fw-bold">Listado de Servicios</h2>
            <p class="text-muted">Gestiona los registros de los servicios disponibles</p>
        </div>

        <div class="d-flex justify-content-end mb-4">
            <a asp-page="/Services/Create" class="btn btn-custom">
                <i class="fas fa-plus-circle me-2"></i> Nuevo Servicio
            </a>
        </div>
        

        <div class="table-responsive shadow-sm rounded-3">
            <table id="servicesTable" class="table align-middle text-center" data-datatable>
                <thead class="table-dark">
                <tr>
                    <th style="width:5%; text-align:center">#</th>
                    <th style="width:20%;text-align:center">Nombre</th>
                    <th style="width:15%;text-align:center">Tipo</th>
                    <th style="width:10%;text-align:center">Precio (Bs.)</th>
                    <th style="width:30%;text-align:center">Descripción</th>
                    <th style="width:10%;text-align:center">Acciones</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var s in Model.Services.Select((service, index) => new { service, index = index + 1 }))
                {
                    <tr>
                        <td>@s.index</td>
                        <td class="text-start">@s.service.Name</td>
                        <td>@s.service.Type</td>
                        <td class="text-end">@(s.service.Price?.ToString("N2") ?? "-")</td>
                        <td class="text-start">@s.service.Description</td>
                        <td class="text-nowrap text-center">
                            <a asp-page="/Services/Edit"
                               asp-route-id="@Model.EncryptId(s.service.Id)"
                               class="btn btn-warning btn-sm me-1">
                                <i class="fas fa-edit"></i> Editar
                            </a>

                            <button type="button"
                                    class="btn btn-danger btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal@(s.service.Id)">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>

            @foreach (var s in Model.Services)
            {
                <div class="modal fade" id="deleteModal@(s.Id)" tabindex="-1"
                     aria-labelledby="deleteModalLabel@(s.Id)" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content border-0 shadow">
                            <div class="modal-header modal-header-blue border-0">
                                <h5 class="modal-title" id="deleteModalLabel@(s.Id)">
                                    <i class="fas fa-exclamation-triangle me-2"></i> Confirmar eliminación
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>

                            <div class="modal-body">
                                <p class="mb-3">
                                    ¿Está seguro de que desea eliminar el servicio
                                    <strong>@s.Name</strong>?
                                </p>
                                <p class="text-muted small">
                                    <i class="fas fa-info-circle me-2"></i> Esta acción no se puede deshacer.
                                </p>
                            </div>

                            <div class="modal-footer border-0">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    <i class="fas fa-times me-2"></i> Cancelar
                                </button>

                                <form method="post"
                                      asp-page-handler="Delete"
                                      asp-route-id="@Model.EncryptId(s.Id)"
                                      class="d-inline">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash me-2"></i> Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($.fn.DataTable.isDataTable('#servicesTable')) {
                $('#servicesTable').DataTable().destroy();
            }
            
            DataTableHelper.init('#servicesTable', {
                columnDefs: [
                    { orderable: false, targets: 5 },
                    { type: 'num', targets: 0 } 
                ],
                order: [[0, 'asc']]
            });
        });
    </script>
}

