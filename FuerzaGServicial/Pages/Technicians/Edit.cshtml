@page
@model FuerzaGServicial.Pages.Technicians.Edit
@{
    ViewData["Title"] = "Editar Técnico";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-3">Editar Técnico</h2>

    <form method="post" class="card card-body shadow-sm" id="technicianForm" novalidate>
        <input type="hidden" asp-for="Technician.Id" />

        <div class="row g-3">

            <div class="col-md-6">
                <label asp-for="Technician.Name" class="form-label">Nombre *</label>

                <input asp-for="Technician.Name" class="form-control" placeholder="Ingrese nombre"
                       required minlength="3" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$" />

                <span asp-validation-for="Technician.Name" class="text-danger small"></span>
                <div class="invalid-feedback">El nombre debe tener al menos 3 caracteres y solo letras.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="Technician.FirstLastName" class="form-label">Apellido Paterno *</label>

                <input asp-for="Technician.FirstLastName" class="form-control"
                       placeholder="Ingrese apellido paterno"
                       required minlength="2" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$" />

                <span asp-validation-for="Technician.FirstLastName" class="text-danger small"></span>
                <div class="invalid-feedback">El apellido paterno debe tener al menos 2 caracteres.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="Technician.SecondLastName" class="form-label">Apellido Materno</label>

                <input asp-for="Technician.SecondLastName" class="form-control"
                       placeholder="Ingrese apellido materno (opcional)"
                       minlength="2" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]*$" />

                <span asp-validation-for="Technician.SecondLastName" class="text-danger small"></span>
                <div class="invalid-feedback">Solo letras si se llena.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="Technician.PhoneNumber" class="form-label">Teléfono *</label>

                <input asp-for="Technician.PhoneNumber" class="form-control"
                       type="tel" pattern="[0-9]{8}" required
                       placeholder="Ej: 76543210" />

                <span asp-validation-for="Technician.PhoneNumber" class="text-danger small"></span>
                <div class="invalid-feedback">Debe tener 8 dígitos.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="Technician.Email" class="form-label">Correo Electrónico *</label>

                <input asp-for="Technician.Email" class="form-control"
                       type="email" required maxlength="255"
                       placeholder="ejemplo@correo.com" />

                <span asp-validation-for="Technician.Email" class="text-danger small"></span>
                <div class="invalid-feedback">Correo no válido.</div>
            </div>

            <div class="col-md-6">
                <div class="row g-2">

                    <div class="col-md-8">
                        <label asp-for="Technician.DocumentNumber" class="form-label">Carnet de Identidad *</label>

                        <input asp-for="Technician.DocumentNumber" class="form-control"
                               minlength="6" maxlength="10"
                               pattern="[0-9]{6,10}" required
                               placeholder="Ej: 1234567" />

                        <span asp-validation-for="Technician.DocumentNumber" class="text-danger small"></span>
                        <div class="invalid-feedback">Entre 6 y 10 dígitos.</div>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Technician.DocumentExtension" class="form-label">Complemento</label>

                        <input asp-for="Technician.DocumentExtension" class="form-control"
                               maxlength="2" minlength="2"
                               pattern="^([1-9][A-Z])?$"
                               placeholder="Ej: 1A" />

                        <span asp-validation-for="Technician.DocumentExtension" class="text-danger small"></span>
                        <div class="invalid-feedback">Formato: dígito 1-9 + letra.</div>
                    </div>

                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Technician.BaseSalary" class="form-label">Salario Base (Bs.-*)</label>

                <input asp-for="Technician.BaseSalary" class="form-control"
                       placeholder="Ej: 2500.00"
                       required pattern="^\d+(\.\d{1,2})?$"
                       inputmode="decimal" />

                <span asp-validation-for="Technician.BaseSalary" class="text-danger small"></span>
                <div class="invalid-feedback">Formato numérico válido.</div>
            </div>

            <div class="col-12">
                <label asp-for="Technician.Address" class="form-label">Dirección *</label>

                <textarea asp-for="Technician.Address" class="form-control"
                          rows="2" required minlength="5" maxlength="100"
                          placeholder="Ingrese la dirección completa"></textarea>

                <span asp-validation-for="Technician.Address" class="text-danger small"></span>
                <div class="invalid-feedback">Debe tener al menos 5 caracteres.</div>
            </div>

        </div>

        <div class="mt-4">
            <button type="submit" id="btnSubmit" class="btn btn-dark">
                <i class="fas fa-save"></i> <span class="btn-text">Actualizar</span>
                <span class="spinner-border spinner-border-sm d-none"></span>
            </button>

            <a asp-page="/Technicians/TechnicianPage" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>

        <div class="mt-3">
            <small class="text-muted">* Campos obligatorios</small>
        </div>
    </form>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            function letraPermitida(e) {
                const allowed = /^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]$/;
                const ch = String.fromCharCode(e.which);
                if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) e.preventDefault();
            }

            const nombreInput = $("#Form_Name")[0];
            const apellidoPInput = $("#Form_FirstLastName")[0];
            const apellidoMInput = $("#Form_SecondLastName")[0];

            [nombreInput, apellidoPInput, apellidoMInput].forEach(el => el && el.addEventListener("keypress", letraPermitida));

            $('#Form_PhoneNumber, #Form_DocumentNumber').on('keypress', function (e) {
                if (e.which < 48 || e.which > 57) e.preventDefault();
            });

            $('#Form_PhoneNumber').on('input', function () {
                if (this.value.length > 8) this.value = this.value.slice(0, 8);
            });
            $('#Form_DocumentNumber').on('input', function () {
                if (this.value.length > 9) this.value = this.value.slice(0, 9);
            });

            const baseSalaryInput = $("#Form_BaseSalary")[0];
            if (baseSalaryInput) {
                baseSalaryInput.addEventListener("keypress", function (e) {
                    const ch = String.fromCharCode(e.which);
                    const allowed = /^[0-9.]$/;
                    if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) e.preventDefault();
                    if (ch === '.' && this.value.includes('.')) e.preventDefault();
                });
                baseSalaryInput.addEventListener("input", function () {
                    const match = this.value.match(/^(\d+(\.\d{0,2})?)?/);
                    if (match) this.value = match[0];
                });
            }

            $('input, textarea').on('input', function () {
                const field = $(this);
                const validIcon = field.siblings('.valid-icon');
                const invalidIcon = field.siblings('.invalid-icon');

                if (this.checkValidity()) {
                    field.removeClass('is-invalid').addClass('is-valid');
                    validIcon.removeClass('d-none');
                    invalidIcon.addClass('d-none');
                } else {
                    field.removeClass('is-valid').addClass('is-invalid');
                    validIcon.addClass('d-none');
                    invalidIcon.removeClass('d-none');
                }
            });

            $('#technicianForm').on('submit', function(e) {
                e.preventDefault();
                const form = this;

                if (!form.checkValidity()) {
                    $(form).addClass('was-validated');
                    return;
                }

                const btn = $('#btnSubmit');
                btn.prop('disabled', true);
                btn.find('.btn-text').text('Actualizando...');
                btn.find('.spinner-border').removeClass('d-none');

                form.submit();
            });
        });
    </script>
}
