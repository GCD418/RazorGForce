@page
@model FuerzaGServicial.Pages.Technicians.Edit
@{
    ViewData["Title"] = "Editar Técnico";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-3">Editar Técnico</h2>

    <form method="post" class="card card-body shadow-sm" id="technicianForm" novalidate>
        <input type="hidden" asp-for="EncryptedId" />
        <input type="hidden" asp-for="Form.Id" />

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Form.Name" class="form-label">Nombre *</label>
                
                <input asp-for="Form.Name" class="form-control" placeholder="Ingrese nombre"
                    required minlength="3" maxlength="100"
                    pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$" />
                <span class="valid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-success d-none">
                    <i class="fas fa-check-circle"></i>
                </span>
                <span class="invalid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-danger d-none">
                    <i class="fas fa-times-circle"></i>
                </span>
                <div class="invalid-feedback">El nombre debe tener al menos 3 caracteres y solo letras.</div>
                
                <span asp-validation-for="Form.Name" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Form.FirstLastName" class="form-label">Apellido Paterno *</label>
                
                <input asp-for="Form.FirstLastName" class="form-control" placeholder="Ingrese apellido paterno"
                        required minlength="2" maxlength="100"
                        pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$" />
                <span class="valid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-success d-none"><i class="fas fa-check-circle"></i></span>
                <span class="invalid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-danger d-none"><i class="fas fa-times-circle"></i></span>
                <div class="invalid-feedback">El apellido paterno debe tener al menos 2 caracteres y solo letras.</div>
                
                <span asp-validation-for="Form.FirstLastName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Form.SecondLastName" class="form-label">Apellido Materno</label>
                
                <input asp-for="Form.SecondLastName" class="form-control" placeholder="Ingrese apellido materno (opcional)"
                        minlength="2" maxlength="100"
                        pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]*$" />
                <span class="valid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-success d-none"><i class="fas fa-check-circle"></i></span>
                <span class="invalid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-danger d-none"><i class="fas fa-times-circle"></i></span>
                <div class="invalid-feedback">El apellido materno debe tener al menos 2 caracteres y solo letras.</div>
                
                <span asp-validation-for="Form.SecondLastName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Form.PhoneNumber" class="form-label">Teléfono *</label>
                <input asp-for="Form.PhoneNumber" class="form-control" type="tel"
                       pattern="[0-9]{8}" required placeholder="Ej: 76543210" />
                <span asp-validation-for="Form.PhoneNumber" class="text-danger small"></span>
                <div class="invalid-feedback">El teléfono debe tener exactamente 8 dígitos.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="Form.Email" class="form-label">Correo Electrónico *</label>
                <input asp-for="Form.Email" class="form-control" type="email"
                       required maxlength="255" placeholder="ejemplo@correo.com" />
                <span asp-validation-for="Form.Email" class="text-danger small"></span>
                <div class="invalid-feedback">Ingrese un correo electrónico válido.</div>
            </div>

            <div class="col-md-6">
                <div class="row g-2 align-items-start">
                    <div class="col-md-8">
                        <label asp-for="Form.DocumentNumber" class="form-label">Carnet de Identidad *</label>
                        <input asp-for="Form.DocumentNumber" id="Form_DocumentNumber" class="form-control" type="text"
                               minlength="6" maxlength="9" pattern="[0-9]{6,9}" required placeholder="Ej: 1234567" />
                        <span asp-validation-for="Form.DocumentNumber" class="text-danger small"></span>
                        <div class="invalid-feedback">El CI debe contener entre 6 y 9 dígitos.</div>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Form.DocumentExtension" class="form-label">Complemento</label>
                        <input asp-for="Form.DocumentExtension" id="Form_Complement" class="form-control" placeholder="Ej: 1A"
                               maxlength="2" minlength="2" pattern="^([1-9][A-Z])?$"
                               title="Formato: dígito 1-9 seguido de letra mayúscula (ej. 1A)" />
                        <span asp-validation-for="Form.DocumentExtension" class="text-danger small"></span>
                        <div class="invalid-feedback">
                            Formato: dígito 1-9 seguido de letra mayúscula.
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Form.BaseSalary" class="form-label">Salario Base (Bs.-*)</label>
                
                <input asp-for="Form.BaseSalary" class="form-control" placeholder="Ej: 2500.00"
                        required pattern="^\d+(\.\d{1,2})?$"
                        title="Solo se permiten números y un punto decimal (hasta dos decimales)."
                        inputmode="decimal" />
                <span class="valid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-success d-none"><i class="fas fa-check-circle"></i></span>
                <span class="invalid-icon position-absolute end-0 top-50 translate-middle-y pe-3 text-danger d-none"><i class="fas fa-times-circle"></i></span>
                <div class="invalid-feedback">Ingrese un salario válido mayor a 0 con hasta 2 decimales.</div>
                
                <span asp-validation-for="Form.BaseSalary" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <label asp-for="Form.Address" class="form-label">Dirección *</label>
                <textarea asp-for="Form.Address" class="form-control" rows="2" placeholder="Ingrese la dirección completa"
                          required minlength="5" maxlength="100"></textarea>
                <span asp-validation-for="Form.Address" class="text-danger small"></span>
                <div class="invalid-feedback">La dirección debe tener al menos 5 caracteres.</div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" id="btnSubmit" class="btn btn-dark">
                <i class="fas fa-save"></i> <span class="btn-text">Actualizar</span>
                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
            </button>
            <a asp-page="/Technicians/TechnicianPage" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>

        <div class="mt-3">
            <small class="text-muted">* Campos obligatorios</small>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            function letraPermitida(e) {
                const allowed = /^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]$/;
                const ch = String.fromCharCode(e.which);
                if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) e.preventDefault();
            }

            const nombreInput = $("#Form_Name")[0];
            const apellidoPInput = $("#Form_FirstLastName")[0];
            const apellidoMInput = $("#Form_SecondLastName")[0];

            [nombreInput, apellidoPInput, apellidoMInput].forEach(el => el && el.addEventListener("keypress", letraPermitida));

            $('#Form_PhoneNumber, #Form_DocumentNumber').on('keypress', function (e) {
                if (e.which < 48 || e.which > 57) e.preventDefault();
            });

            $('#Form_PhoneNumber').on('input', function () {
                if (this.value.length > 8) this.value = this.value.slice(0, 8);
            });
            $('#Form_DocumentNumber').on('input', function () {
                if (this.value.length > 9) this.value = this.value.slice(0, 9);
            });

            const baseSalaryInput = $("#Form_BaseSalary")[0];
            if (baseSalaryInput) {
                baseSalaryInput.addEventListener("keypress", function (e) {
                    const ch = String.fromCharCode(e.which);
                    const allowed = /^[0-9.]$/;
                    if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) e.preventDefault();
                    if (ch === '.' && this.value.includes('.')) e.preventDefault();
                });
                baseSalaryInput.addEventListener("input", function () {
                    const match = this.value.match(/^(\d+(\.\d{0,2})?)?/);
                    if (match) this.value = match[0];
                });
            }

            $('input, textarea').on('input', function () {
                const field = $(this);
                const validIcon = field.siblings('.valid-icon');
                const invalidIcon = field.siblings('.invalid-icon');

                if (this.checkValidity()) {
                    field.removeClass('is-invalid').addClass('is-valid');
                    validIcon.removeClass('d-none');
                    invalidIcon.addClass('d-none');
                } else {
                    field.removeClass('is-valid').addClass('is-invalid');
                    validIcon.addClass('d-none');
                    invalidIcon.removeClass('d-none');
                }
            });

            $('#technicianForm').on('submit', function(e) {
                e.preventDefault();
                const form = this;

                if (!form.checkValidity()) {
                    $(form).addClass('was-validated');
                    return;
                }

                const btn = $('#btnSubmit');
                btn.prop('disabled', true);
                btn.find('.btn-text').text('Actualizando...');
                btn.find('.spinner-border').removeClass('d-none');

                form.submit();
            });
        });
    </script>
}
