@page
@model FuerzaGServicial.Pages.Technicians.Create
@{
    ViewData["Title"] = "Crear Técnico";
}

<div class="container mt-4 mb-5">
    <h2>Nuevo Técnico</h2>

    <form method="post" class="card card-body shadow-sm" id="technicianForm" novalidate>
        <div class="row g-3">

            <!-- Nombre -->
            <div class="col-md-6">
                <label asp-for="Technician.Name" class="form-label">Nombre *</label>
                <input asp-for="Technician.Name" class="form-control" placeholder="Ingrese nombre"
                       required minlength="3" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$"
                       title="Solo se permiten letras y espacios." />
                <div class="invalid-feedback">
                    El nombre debe tener al menos 3 caracteres y solo letras.
                </div>
                <span asp-validation-for="Technician.Name" class="text-danger small"></span>
            </div>

            <!-- Apellido Paterno -->
            <div class="col-md-6">
                <label asp-for="Technician.FirstLastName" class="form-label">Apellido Paterno *</label>
                <input asp-for="Technician.FirstLastName" class="form-control" placeholder="Ingrese apellido paterno"
                       required minlength="2" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$"
                       title="Solo se permiten letras y espacios." />

                <div class="invalid-feedback">
                    El apellido paterno debe tener al menos 2 caracteres y solo letras.
                </div>
                <span asp-validation-for="Technician.FirstLastName" class="text-danger small"></span>
            </div>

            <!-- Apellido Materno -->
            <div class="col-md-6">
                <label asp-for="Technician.SecondLastName" class="form-label">Apellido Materno</label>
                <input asp-for="Technician.SecondLastName" class="form-control" placeholder="Ingrese apellido materno (opcional)"
                       minlength="2" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]*$"
                       title="Solo se permiten letras y espacios si se llena." />

                <div class="invalid-feedback">
                    El apellido materno debe tener al menos 2 caracteres y solo letras.
                </div>

                <span asp-validation-for="Technician.SecondLastName" class="text-danger small"></span>
            </div>

            <!-- Teléfono -->
            <div class="col-md-6">
                <label asp-for="Technician.PhoneNumber" class="form-label">Teléfono *</label>
                <input asp-for="Technician.PhoneNumber" class="form-control" placeholder="Ej: 76543210"
                       type="tel" pattern="[0-9]{8}" value="" required />
                <span asp-validation-for="Technician.PhoneNumber" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El teléfono debe tener exactamente 8 dígitos.
                </div>
            </div>

            <!-- Email -->
            <div class="col-md-6">
                <label asp-for="Technician.Email" class="form-label">Correo Electrónico *</label>
                <input asp-for="Technician.Email" class="form-control" placeholder="ejemplo@correo.com"
                       type="email" required maxlength="255" />
                <span asp-validation-for="Technician.Email" class="text-danger small"></span>
                <div class="invalid-feedback">
                    Ingrese un correo electrónico válido.
                </div>
            </div>

            <!-- Documento -->
            <div class="col-md-6">
                <div class="row g-2 align-items-start">

                    <div class="col-md-8">
                        <label asp-for="Technician.DocumentNumber" class="form-label">CI *</label>
                        <input asp-for="Technician.DocumentNumber" class="form-control"
                               placeholder="Ej: 1234567"
                               type="text" minlength="6" maxlength="10"
                               pattern="[0-9]{6,10}" required />
                        <span asp-validation-for="Technician.DocumentNumber" class="text-danger small"></span>
                        <div class="invalid-feedback">
                            El CI debe contener entre 6 y 10 dígitos.
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Technician.DocumentExtension" class="form-label">Complemento</label>
                        <input asp-for="Technician.DocumentExtension" class="form-control"
                               placeholder="Ej: 1A"
                               maxlength="2" minlength="2"
                               pattern="^([1-9][A-Z])?$"
                               title="Formato: dígito 1-9 seguido de letra mayúscula (ej. 1A)" />
                        <span asp-validation-for="Technician.DocumentExtension" class="text-danger small"></span>
                        <div class="invalid-feedback">
                            Formato: dígito 1-9 seguido de letra mayúscula.
                        </div>
                    </div>

                </div>
            </div>

            <!-- Salario -->
            <div class="col-md-6">
                <label asp-for="Technician.BaseSalary" class="form-label">Salario Base (Bs.-)*</label>
                <input asp-for="Technician.BaseSalary" class="form-control"
                        value=""
                       placeholder="Ej: 2500.00"
                       required pattern="^\d+(\.\d{1,2})?$"
                       title="Solo se permiten números y un punto decimal (hasta dos decimales)."
                       inputmode="decimal" />

                <div class="invalid-feedback">
                    Ingrese un salario válido mayor a 0 con hasta 2 decimales.
                </div>

                <span asp-validation-for="Technician.BaseSalary" class="text-danger small"></span>
            </div>

            <!-- Dirección -->
            <div class="col-12">
                <label asp-for="Technician.Address" class="form-label">Dirección *</label>
                <textarea asp-for="Technician.Address" class="form-control"
                          rows="2" placeholder="Ingrese la dirección completa"
                          required minlength="5" maxlength="200"></textarea>
                <span asp-validation-for="Technician.Address" class="text-danger small"></span>
                <div class="invalid-feedback">
                    La dirección debe tener al menos 5 caracteres y no más de 200.
                </div>
            </div>

        </div>

        <div class="mt-4">
            <button type="submit" id="btnSubmit" class="btn btn-dark">
                <i class="fas fa-save"></i> <span class="btn-text">Guardar</span>
                <span class="spinner-border spinner-border-sm d-none" role="status"></span>
            </button>

            <a asp-page="/Technicians/TechnicianPage" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>

        <div class="mt-3">
            <small class="text-muted">* Campos obligatorios</small>
        </div>
    </form>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            const form = $('#technicianForm')[0];

            // Validación de letras y caracteres permitidos
            function letraPermitida(e, isAddress = false) {
                const allowedLetters = /^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]$/;
                const allowedAddress = /^[A-Za-zÁÉÍÓÚáéíóúÑñÜü0-9\s,./\-#()]*$/;
                const ch = String.fromCharCode(e.which);
                if (isAddress) {
                    if (!allowedAddress.test(ch) && e.which !== 8 && e.which !== 0) e.preventDefault();
                } else {
                    if (!allowedLetters.test(ch) && e.which !== 8 && e.which !== 0) e.preventDefault();
                }
            }

            // Nombres y apellidos: solo letras, convertir a mayúsculas
            ['#Technician_Name','#Technician_FirstLastName','#Technician_SecondLastName'].forEach(id => {
               $(id).on('keypress', function(e){ letraPermitida(e); });
               $(id).on('input', function(){ this.value = this.value.toUpperCase(); });
            });

            // Dirección: caracteres permitidos, NO convertir a mayúsculas
            $('#Technician_Address').on('keypress', function(e){ letraPermitida(e, true); });

            // Extensión de documento: convertir a mayúsculas automáticamente
            $('#Technician_DocumentExtension').on('input', function(){
                this.value = this.value.toUpperCase();
            });

            // Teléfono y CI: solo números
            $('#Technician_PhoneNumber, #Technician_DocumentNumber').on('keypress', function (e) {
                if (e.which < 48 || e.which > 57) e.preventDefault();
            });

            // Validar longitud de Teléfono (exactamente 8)
            $('#Technician_PhoneNumber').on('input', function () {
                this.value = this.value.replace(/\D/g, '');
                if (this.value.length > 8) this.value = this.value.slice(0, 8);
            });

            // Validar longitud de Documento (6 a 10)
            $('#Technician_DocumentNumber').on('input', function () {
                this.value = this.value.replace(/\D/g, '');
                if (this.value.length > 10) this.value = this.value.slice(0, 10);
            });

            // Salario decimal
            $('#Technician_BaseSalary').on('keypress', function(e){
                const ch = String.fromCharCode(e.which);
                const allowed = /^[0-9.]$/;
                if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) e.preventDefault();
                if (ch === '.' && this.value.includes('.')) e.preventDefault();
            }).on('input', function() {
                const match = this.value.match(/^(\d+(\.\d{0,2})?)?/);
                if(match) this.value = match[0];
            });

            // Alertas dinámicas
            $('input, textarea').on('input', function () {
                const field = $(this);
                const validIcon = field.siblings('.valid-icon');
                const invalidIcon = field.siblings('.invalid-icon');
                if (this.checkValidity()) {
                    field.removeClass('is-invalid').addClass('is-valid');
                    validIcon.removeClass('d-none');
                    invalidIcon.addClass('d-none');
                } else {
                    field.removeClass('is-valid').addClass('is-invalid');
                    validIcon.addClass('d-none');
                    invalidIcon.removeClass('d-none');
                }
            });

            // Submit con animación
            $('#technicianForm').on('submit', function(e){
                if(!form.checkValidity()){
                    e.preventDefault();
                    form.classList.add('was-validated');
                    return;
                }

                const btn = $('#btnSubmit');
                btn.prop('disabled', true);
                btn.find('.btn-text').text('Guardando...');
                btn.find('.spinner-border').removeClass('d-none');
            });
        });
    </script>
}
