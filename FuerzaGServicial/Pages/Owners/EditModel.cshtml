@page
@model FuerzaGServicial.Pages.Owners.EditModel
@{
    ViewData["Title"] = "Editar Dueño";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-3">Editar Dueño</h2>

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Any() == true)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h6 class="alert-heading mb-2">
                <i class="fas fa-exclamation-triangle"></i> Errores generales:
            </h6>
            <ul class="mb-0 small">
                @foreach (var error in ViewData.ModelState[""].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" class="card card-body shadow-sm" id="ownerForm" novalidate>
        <input type="hidden" asp-for="Owner.Id" />

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Owner.Name" class="form-label">Nombre *</label>
                <input asp-for="Owner.Name" class="form-control"
                       placeholder="Ingrese el nombre"
                       required minlength="3" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ ]+$"
                       title="Solo se permiten letras y espacios." />
                <span asp-validation-for="Owner.Name" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El nombre debe tener al menos 3 caracteres y solo letras.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Owner.FirstLastname" class="form-label">Apellido Paterno *</label>
                <input asp-for="Owner.FirstLastname" class="form-control"
                       placeholder="Ingrese apellido paterno"
                       required minlength="2" maxlength="100"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ ]+$"
                       title="Solo se permiten letras y espacios." />
                <span asp-validation-for="Owner.FirstLastname" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El apellido paterno debe tener al menos 2 caracteres y solo letras.
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Owner.SecondLastname" class="form-label">Apellido Materno</label>
                <input asp-for="Owner.SecondLastname" class="form-control"
                       minlength="2" maxlength="100"
                       placeholder="Ingrese apellido materno (opcional)"
                       pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ ]*$"
                       title="Solo se permiten letras y espacios si se llena." />
                <span asp-validation-for="Owner.SecondLastname" class="text-danger small"></span>
                <div class="invalid-feedback">
                    El apellido materno debe tener al menos 2 caracteres y solo letras
                </div>
            </div>

            <div class="col-md-6">
                <label asp-for="Owner.PhoneNumber" class="form-label">Teléfono *</label>
                <input asp-for="Owner.PhoneNumber" class="form-control"
                       type="tel" pattern="[0-9]{8}" required placeholder="Ej: 76543210" />
                <span asp-validation-for="Owner.PhoneNumber" class="text-danger small"></span>
                <div class="invalid-feedback">El teléfono debe tener exactamente 8 dígitos.</div>
            </div>

            <div class="col-md-6">
                <label asp-for="Owner.Email" class="form-label">Correo Electrónico *</label>
                <input asp-for="Owner.Email" class="form-control"
                       type="email" required maxlength="255"
                       placeholder="ejemplo@correo.com" />
                <span asp-validation-for="Owner.Email" class="text-danger small"></span>
                <div class="invalid-feedback">Ingrese un correo electrónico válido.</div>
            </div>

            <div class="col-md-6">
                <div class="row g-2 align-items-start">
                    <div class="col-md-8">
                        <label asp-for="Owner.DocumentNumber" class="form-label">Carnet de Identidad *</label>
                        <input asp-for="Owner.DocumentNumber" class="form-control"
                               type="text" minlength="6" maxlength="9" placeholder="Ej: 1234567"
                               pattern="[0-9]{6,9}" required />
                        <span asp-validation-for="Owner.DocumentNumber" class="text-danger small"></span>
                        <div class="invalid-feedback">El CI debe contener entre 6 y 9 dígitos.</div>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Owner.DocumentExtension" class="form-label">Complemento</label>
                        <input asp-for="Owner.DocumentExtension" id="Form_Complement" class="form-control" placeholder="Ej: 1A"
                               maxlength="2" minlength="2" pattern="^([1-9][A-Z])?$"
                               title="Formato: dígito 1-9 seguido de letra mayúscula (ej. 1A)" />
                        <span asp-validation-for="Owner.DocumentExtension" class="text-danger small"></span>
                        <div class="invalid-feedback">
                            Formato: dígito 1-9 seguido de letra mayúscula.
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <label asp-for="Owner.Address" class="form-label">Dirección *</label>
                <textarea asp-for="Owner.Address" class="form-control" rows="2"
                          required minlength="5" maxlength="100"
                          placeholder="Ingrese la dirección completa (se permiten caracteres especiales)"></textarea>
                <span asp-validation-for="Owner.Address" class="text-danger small"></span>
                <div class="invalid-feedback">La dirección debe tener al menos 5 caracteres y un máximo de 100.</div>
            </div>
        </div>

        <div class="mt-4">
            <button type="button" class="btn btn-dark" id="btnUpdate">
                <i class="fas fa-save"></i> Actualizar
            </button>
            <a asp-page="/Owners/OwnerPage" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const form = document.getElementById('ownerForm');
            const btnUpdate = $('#btnUpdate');

            $('input[type="tel"], input[asp-for="Owner.DocumentNumber"]').on('keypress', function (e) {
                if (e.which < 48 || e.which > 57) e.preventDefault();
            });

            $('input[type="tel"]').on('input', function () {
                if (this.value.length > 8) this.value = this.value.slice(0, 8);
            });

            $('input[asp-for="Owner.DocumentNumber"]').on('input', function () {
                if (this.value.length > 9) this.value = this.value.slice(0, 9);
            });

            function letraPermitida(e) {
                const allowed = /^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ\s]$/;
                const ch = String.fromCharCode(e.which);
                if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) {
                    e.preventDefault();
                }
            }

            [ "Owner_Name", "Owner_FirstLastname", "Owner_SecondLastname" ].forEach(id => {
                const el = document.getElementById(id);
                el && el.addEventListener("keypress", letraPermitida);
            });

            $('#ownerForm input, #ownerForm textarea').on('input', function () {
                if (this.checkValidity()) {
                    $(this).removeClass('is-invalid');
                } else {
                    $(this).addClass('is-invalid');
                }
            });

            btnUpdate.on('click', function (e) {
                e.preventDefault();
                let formValid = form.checkValidity();
                if (formValid) {
                    btnUpdate.prop('disabled', true)
                             .html('<i class="fas fa-spinner fa-spin"></i> Actualizando...');
                    form.submit();
                } else {
                    $(form).addClass('was-validated');
                    $('#ownerForm input, #ownerForm textarea').each(function () {
                        if (!this.checkValidity()) $(this).addClass('is-invalid');
                    });
                }
            });
        });
    </script>
}
