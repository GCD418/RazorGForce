@page
@model FuerzaGServicial.Pages.Owners.EditModel
@{
    ViewData["Title"] = "Editar Dueño";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-3">Editar Dueño</h2>

    <form method="post" class="card card-body shadow-sm" id="ownerForm" novalidate>

        <input type="hidden" asp-for="OwnerModel.Id" />


        <div class="row g-3">

            <div class="col-md-6">
                <label asp-for="OwnerModel.Name" class="form-label">Nombre *</label>
                <input asp-for="OwnerModel.Name" class="form-control" required minlength="3" placeholder="Ingrese nombre"
                       maxlength="100" pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$" />
                <span asp-validation-for="OwnerModel.Name" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="OwnerModel.FirstLastname" class="form-label">Apellido Paterno *</label>
                <input asp-for="OwnerModel.FirstLastname" class="form-control" required minlength="2" placeholder="Ingrese apellido paterno"
                       maxlength="100" pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]+$" />
                <span asp-validation-for="OwnerModel.FirstLastname" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="OwnerModel.SecondLastname" class="form-label">Apellido Materno</label>
                <input asp-for="OwnerModel.SecondLastname" class="form-control" minlength="2" placeholder="Ingrese apellido materno (opcional)"
                       maxlength="100" pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñÜü\s]*$" />
                <span asp-validation-for="OwnerModel.SecondLastname" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="OwnerModel.PhoneNumber" class="form-label">Teléfono *</label>
                <input asp-for="OwnerModel.PhoneNumber" class="form-control" placeholder="Ej: 76543210"
                       pattern="[0-9]{8}" required />
                <span asp-validation-for="OwnerModel.PhoneNumber" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="OwnerModel.Email" class="form-label">Correo *</label>
                <input asp-for="OwnerModel.Email" class="form-control" placeholder="ejemplo@correo.com"
                       type="email" required maxlength="255" />
                <span asp-validation-for="OwnerModel.Email" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <div class="row g-2">

                    <div class="col-md-8">
                        <label asp-for="OwnerModel.DocumentNumber" class="form-label">CI *</label>
                        <input asp-for="OwnerModel.DocumentNumber" class="form-control" placeholder="Ej: 1234567"
                               pattern="[0-9]{6,10}" required minlength="6" maxlength="10" />
                        <span asp-validation-for="OwnerModel.DocumentNumber"
                              class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="OwnerModel.DocumentExtension" class="form-label">Complemento</label>
                        <input asp-for="OwnerModel.DocumentExtension" class="form-control" placeholder="Ej: 1A"
                               pattern="^([1-9][A-Z])?$" maxlength="2" minlength="2" />
                        <span asp-validation-for="OwnerModel.DocumentExtension"
                              class="text-danger small"></span>
                    </div>

                </div>
            </div>

            <div class="col-12">
                <label asp-for="OwnerModel.Address" class="form-label">Dirección *</label>
                <textarea asp-for="OwnerModel.Address" class="form-control" minlength="5" maxlength="100" placeholder="Ingrese la dirección completa"
                          required></textarea>
                <span asp-validation-for="OwnerModel.Address" class="text-danger small"></span>
            </div>

        </div>

        <div class="mt-4">
            <button type="submit" id="btnUpdate" class="btn btn-dark">
                <i class="fas fa-save"></i> Actualizar
            </button>
            <a asp-page="/Owners/OwnerPage" class="btn btn-outline-secondary">Cancelar</a>
        </div>

    </form>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            const form = document.getElementById('ownerForm');
            const btnUpdate = $('#btnUpdate');

            $('input[type="tel"], input[asp-for="Owner.DocumentNumber"]').on('keypress', function (e) {
                if (e.which < 48 || e.which > 57) e.preventDefault();
            });

            $('input[type="tel"]').on('input', function () {
                if (this.value.length > 8) this.value = this.value.slice(0, 8);
            });

            $('input[asp-for="Owner.DocumentNumber"]').on('input', function () {
                if (this.value.length > 9) this.value = this.value.slice(0, 9);
            });

            function letraPermitida(e) {
                const allowed = /^[A-Za-zÁÉÍÓÚáéíóúÑñüÜ\s]$/;
                const ch = String.fromCharCode(e.which);
                if (!allowed.test(ch) && e.which !== 8 && e.which !== 0) {
                    e.preventDefault();
                }
            }

            [ "Owner_Name", "Owner_FirstLastname", "Owner_SecondLastname" ].forEach(id => {
                const el = document.getElementById(id);
                el && el.addEventListener("keypress", letraPermitida);
            });

            $('#ownerForm input, #ownerForm textarea').on('input', function () {
                if (this.checkValidity()) {
                    $(this).removeClass('is-invalid');
                } else {
                    $(this).addClass('is-invalid');
                }
            });

            btnUpdate.on('click', function (e) {
                e.preventDefault();
                let formValid = form.checkValidity();
                if (formValid) {
                    btnUpdate.prop('disabled', true)
                             .html('<i class="fas fa-spinner fa-spin"></i> Actualizando...');
                    form.submit();
                } else {
                    $(form).addClass('was-validated');
                    $('#ownerForm input, #ownerForm textarea').each(function () {
                        if (!this.checkValidity()) $(this).addClass('is-invalid');
                    });
                }
            });
        });
    </script>
}
