@page
@model FuerzaGServicial.Pages.Owners.OwnerPageModel

@{
    ViewData["Title"] = "Dueños";
}
<section id="owners" class="section bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="fw-bold">Listado de Dueños</h2>
            <p class="text-muted">Gestiona los registros de los propietarios del sistema</p>
        </div>

        <div class="d-flex justify-content-end mb-4">
            <a asp-page="/Owners/CreateModel" class="btn btn-custom">
                <i class="fas fa-plus-circle me-2"></i> Nuevo Dueño
            </a>
        </div>

        <div class="table-responsive shadow-sm rounded-3">
            <table id="ownerTable" class="table align-middle text-center" data-datatable>
                <thead class="table-dark">
                    <tr>
                        <th style="width:5%;">#</th>
                        <th style="width:30%;">Nombre Completo</th>
                        <th style="width:10%;">Teléfono</th>
                        <th style="width:25%;">Email</th>
                        <th style="width:30%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var owner in Model.Owners.Select((item, index) => new { item, index = index + 1 }))
                {
                    <tr>
                        <td class="text-center"><strong>@owner.index</strong></td>
                        <td class="text-start">@owner.item.FullName</td>
                        <td class="text-center">@owner.item.PhoneNumber</td>
                        <td class="text-start">@owner.item.Email</td>
                        <td class="text-nowrap text-center">
                            <a asp-page="/Owners/EditModel"
                               asp-route-id="@Model.EncryptId(owner.item.Id)"
                               class="btn btn-warning btn-sm me-1">
                                <i class="fas fa-edit"></i> Editar
                            </a>

                            <button type="button"
                                    class="btn btn-sm btn-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal@(owner.item.Id)">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
                </tbody>
                
            </table>

            @foreach (var owner in Model.Owners)
            {
                <div class="modal fade" id="deleteModal@(owner.Id)" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content border-0 shadow">

                            <div class="modal-header bg-dark text-white">
                                <h5 class="modal-title">
                                    <i class="fas fa-exclamation-triangle me-2"></i> Confirmar eliminación
                                </h5>
                                <button type="button"
                                        class="btn-close btn-close-white"
                                        data-bs-dismiss="modal">
                                </button>
                            </div>

                            <div class="modal-body">
                                <p>¿Está seguro de que desea eliminar a <strong>@owner.FullName</strong>?</p>
                                <p class="text-muted small">
                                    <i class="fas fa-info-circle me-2"></i> Esta acción no se puede deshacer.
                                </p>
                            </div>

                            <div class="modal-footer border-0">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    Cancelar
                                </button>

                                <form method="post"
                                      asp-page-handler="Delete"
                                      asp-route-id="@Model.EncryptId(owner.Id)">
                                    <button type="submit" class="btn btn-danger">
                                        Eliminar
                                    </button>
                                </form>

                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($.fn.DataTable.isDataTable('#servicesTable')) {
                $('#servicesTable').DataTable().destroy();
            }
            
            DataTableHelper.init('#servicesTable', {
                columnDefs: [
                    { orderable: false, targets: 5 },
                    { type: 'num', targets: 0 } 
                ],
                order: [[0, 'asc']]
            });
        });
    </script>
}