@page
@model FuerzaGServicial.Pages.Owners.OwnerPage

@{
    ViewData["Title"] = "Dueños";
}
<section id="owners" class="section bg-light">
  <div class="container">
    <div class="section-header text-center mb-5">
      <h2 class="fw-bold">Listado de Dueños</h2>
      <p class="text-muted">Gestiona los registros de los propietarios del sistema</p>
    </div>
    
    <div class="d-flex justify-content-end mb-4">
      <a asp-page="/Owners/CreateModel" class="btn btn-custom">
        <i class="fas fa-plus-circle me-2"></i> Nuevo Dueño
      </a>
    </div>

    <div class="table-responsive shadow-sm rounded-3">
      <table class="table align-middle">
        <thead class="table-dark text-center">
        <tr>
          <th style="width:10%;">#</th>
          <th style="width:30%;">Nombre Completo</th>
          <th style="width:20%;">Teléfono</th>
          <th style="width:40%;">Acciones</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var owner in Model.Owners.Select((item, index) => new { item, index = index + 1 }))
        {
          <tr>
            <td class="text-center"><strong>@owner.index</strong></td>
            <td>@owner.item.FullName</td>
            <td class="text-center">@owner.item.PhoneNumber</td>
            <td class="text-nowrap text-center">
              <a asp-page="/Owners/EditModel" asp-route-id="@Model.EncryptId(owner.item.Id)" class="btn btn-warning btn-sm me-1">
                <i class="fas fa-edit"></i> Editar
              </a>
              <button type="button" class="btn btn-sm btn-danger"
                      data-bs-toggle="modal"
                      data-bs-target="#deleteModal@(owner.item.Id)">
                <i class="bi bi-trash"></i> Eliminar
              </button>
            </td>
          </tr>
        }
        </tbody>
        <tfoot class="table-light">
        <tr>
          <td colspan="6" class="text-end" style="font-weight: 400 !important; text-align: right !important;">
            <strong>@Model.Owners.Count()</strong> registro(s) encontrado(s)
          </td>
        </tr>
        </tfoot>
      </table>
      
      @foreach (var owner in Model.Owners)
        {
            <div class="modal fade" id="deleteModal@(owner.Id)" tabindex="-1" aria-labelledby="deleteModalLabel@(owner.Id)" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0 shadow">
                        <div class="modal-header bg-dark text-white border-0">
                            <h5 class="modal-title text-light" id="deleteModalLabel@(owner.Id)">
                                <i class="fas fa-exclamation-triangle me-2"></i>  Confirmar eliminación
                            </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                        </div>
                        <div class="modal-body">
                            <p class="mb-3">
                                ¿Está seguro de que desea eliminar al propietario <strong>@owner.Name @owner.FirstLastname</strong>?
                            </p>
                            <p class="text-muted small">
                                <i class="fas fa-info-circle me-4"></i> Esta acción no se puede deshacer.
                            </p>
                        </div>
                        <div class="modal-footer border-0">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <i class="fas fa-times me-2"></i> Cancelar
                            </button>
                            <form method="post"
                                  asp-page-handler="Delete"
                                  asp-route-id="@Model.EncryptId(owner.Id)"
                                  style="display: inline;">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i> Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
  </div>
</section>
